<article class="post">
    <div class="col rank">
        <span>{{counter @index}}</span>
    </div>
    <div class="col thumbnail">
        <a href={{url}} data-id={{_id}}>
            <img src="{{imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{url}}">
                {{title}}
            </a>
        </div>
        <div class="details">
            <div class="info">
                submitted {{date}} ago by {{author}}
            </div>
            <div class="controls">
                <ul>
                    <li class="action"><a class="commentsLink" href="#/comments/:{{_id}}">comments</a></li>
                    {{#if isAuthor}}
                        <li class="action"><a href="#/edit/:{{_id}}" class="editPost">Edit</a></li>
                        <li class="action"><a href="#/delete/:{{_id}}" class="deletePost">Delete</a></li>
                    {{/if}}
              </ul>
            </div>
        </div>
    </div>
</article>